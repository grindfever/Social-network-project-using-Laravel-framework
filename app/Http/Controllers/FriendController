<?php

namespace App\Http\Controllers;

use App\Models\Friend;
use Illuminate\Http\Request;

class FriendController extends Controller
{
    public function index()
    {
        // Retrieve and display the list of friends for the authenticated user
        $friends = auth()->user()->friends;

        return view('friends.index', compact('friends'));
    }

    public function show($friendId)
    {
        // Retrieve and display the profile of the friend
        $friend = Friend::findOrFail($friendId);

        return view('friends.show', compact('friend'));
    }

    public function getIndex()
    {
        $friends = Friend::where('userid1', auth()->id())
            ->orWhere('userid2', auth()->id())
            ->get();

        return view('friends.index', compact('friends'));
    }

    public function postRemove($friendId)
    {
        // Logic to remove the friend by ID
        Friend::destroy($friendId);

        return redirect()->route('friends.index')->with('success', 'Friend removed successfully.');
    }
}
